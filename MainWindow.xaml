        <Button x:Name="B5" Content="5" HorizontalAlignment="Left" Margin="107,368,0,0" VerticalAlignment="Top" Tag="5" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="B6" Content="6" HorizontalAlignment="Left" Margin="200,368,0,0" VerticalAlignment="Top" Tag="6" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="B8" Content="8" HorizontalAlignment="Left" Margin="107,316,0,0" VerticalAlignment="Top" Tag="8" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="B9" Content="9" HorizontalAlignment="Left" Margin="200,316,0,0" VerticalAlignment="Top" Tag="9" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="B0" Content="0" HorizontalAlignment="Left" Margin="107,470,0,0" VerticalAlignment="Top" Tag="0" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="B7" Content="7" HorizontalAlignment="Left" Margin="13,316,0,0" VerticalAlignment="Top" Tag="7" Height="43" Width="79" Click="add_digit" FontSize="24" Background="White"/>
        <Button x:Name="division" Content="/" HorizontalAlignment="Left" Margin="293,264,0,0" VerticalAlignment="Top" Height="43" Width="79" Click="division_click" FontSize="24"/>
        <Button x:Name="minus" Content="-" HorizontalAlignment="Left" Margin="293,368,0,0" VerticalAlignment="Top" Height="43" Width="79" Click="minus_click" FontSize="24"/>
        <Button x:Name="myltiply" Content="*" HorizontalAlignment="Left" Margin="293,316,0,0" VerticalAlignment="Top" Height="43" Width="79" Click="myltiply_click" FontSize="24"/>
        <Label x:Name="behind_text" Content="" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Width="353" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="14"/>
